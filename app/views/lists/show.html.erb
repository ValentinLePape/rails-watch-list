<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.gettyimages.com/id/10150595/fr/photo/audience-in-movie-theater-1935.jpg?s=1024x1024&w=gi&k=20&c=SiYedisT81jF924hZjFcJEgYSd-2K3CQK99H90V-4CQ=);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="cards">
  <% @list.bookmarks.each do |bookmark|  %>
    <div class="card-product w-10">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
          <p><%= bookmark.comment %></p>
      </div>
    </div>
  <% end %>
</div>


<div><%= link_to "Back", lists_path, class: "btn btn-outline-primary"%></div>
<div><%= link_to "Create new bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-primary"%></div>
