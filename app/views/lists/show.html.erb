<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="cards">
  <% @list.bookmarks.each do |bookmark|  %>
    <div class="card-product w-10">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
          <p><%= bookmark.comment %></p>
      </div>
    </div>
  <% end %>
</div>


<div><%= link_to "Back", lists_path, class: "btn btn-outline-primary"%></div>
<div><%= link_to "Create new bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-primary"%></div>
